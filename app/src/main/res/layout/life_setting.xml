<Button
    android:id="@+id/Button_6"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="6"
    android:layout_alignBaseline="@+id/Button_5"
    android:layout_alignBottom="@+id/Button_5"
    android:layout_toRightOf="@+id/Button_8"
    android:layout_toEndOf="@+id/Button_8" />

<Button
    android:id="@+id/Button_9"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="9"
    android:layout_below="@+id/Player_cal1"
    android:layout_toLeftOf="@+id/Button_0"
    android:layout_toStartOf="@+id/Button_0" />

<Button
    android:id="@+id/Button_7"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="7"
    android:layout_below="@+id/Player_cal1"
    android:layout_toLeftOf="@+id/Button_8"
    android:layout_toStartOf="@+id/Button_8" />

<Button
    android:id="@+id/Button_4"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="4"
    android:layout_alignBaseline="@+id/Button_5"
    android:layout_alignBottom="@+id/Button_5"
    android:layout_alignLeft="@+id/Button_7"
    android:layout_alignStart="@+id/Button_7" />

<Button
    android:id="@+id/Button_1"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="1"
    android:layout_below="@+id/Button_5"
    android:layout_alignLeft="@+id/Button_4"
    android:layout_alignStart="@+id/Button_4" />

<Button
    android:id="@+id/Button_3"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="3"
    android:layout_below="@+id/Button_6"
    android:layout_toRightOf="@+id/Button_2"
    android:layout_toEndOf="@+id/Button_2" />

<Button
    android:id="@+id/Button_Equal"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="決定"
    android:layout_toRightOf="@+id/Button_6"
    android:layout_toEndOf="@+id/Button_6"
    android:layout_alignBottom="@+id/Button_1"
    android:layout_below="@+id/Button_0" />

    <Button
    android:id="@+id/return_Page"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="return_page"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/Player_cal1"
    android:layout_alignEnd="@+id/Player_cal1"
    android:layout_alignLeft="@+id/Player_cal1"
    android:layout_alignStart="@+id/Player_cal1" />

<Button
    android:id="@+id/Player_cal1"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:text="Life_Point"
    android:layout_below="@+id/return_Page"
    android:layout_toRightOf="@+id/Button_7"
    android:layout_toEndOf="@+id/Button_7" />

    <Button
        android:id="@+id/return_Top"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="return_Top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/return_Page"
        android:layout_toStartOf="@+id/return_Page" />

</RelativeLayout>