<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <Button
    android:id="@+id/Button_6"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="6"
    android:layout_alignBaseline="@+id/Button_5"
    android:layout_alignBottom="@+id/Button_5"
    android:layout_toRightOf="@+id/Button_8"
    android:layout_toEndOf="@+id/Button_8"
        android:background="@drawable/water"/>

    <Button
    android:id="@+id/Button_Equal"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="決定"
    android:layout_toRightOf="@+id/Button_6"
    android:layout_toEndOf="@+id/Button_6"
    android:layout_alignBottom="@+id/Button_1"
    android:layout_below="@+id/Button_0"
        android:background="@drawable/pink"/>

    <Button
        android:id="@+id/return_Top"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="return_Top"
        android:background="@drawable/purple"/>


    <Button
        android:id="@+id/Button_2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="2"
        android:layout_alignBaseline="@+id/Button_1"
        android:layout_alignBottom="@+id/Button_1"
        android:layout_toRightOf="@+id/Button_1"
        android:layout_toEndOf="@+id/Button_1"
        android:background="@drawable/water"/>

    <Button
    android:id="@+id/Button_3"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="3"
        android:layout_alignBottom="@+id/Button_Equal"
        android:layout_toRightOf="@+id/Button_2"
        android:layout_toEndOf="@+id/Button_2"
        android:background="@drawable/water"/>

    <Button
        android:id="@+id/Button_5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="5"
        android:layout_above="@+id/Button_2"
        android:layout_toRightOf="@+id/Button_1"
        android:layout_toEndOf="@+id/Button_1"
        android:background="@drawable/water"/>

    <Button
        android:id="@+id/Button_9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="9"
        android:layout_above="@+id/Button_6"
        android:layout_toRightOf="@+id/Button_5"
        android:layout_toEndOf="@+id/Button_5"
        android:background="@drawable/water"/>

    <Button
        android:id="@+id/Button_0"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Button_5"
        android:layout_toEndOf="@+id/Button_9"
        android:layout_toRightOf="@+id/Button_9"
        android:background="@drawable/green"
        android:text="0" />

    <Button
    android:id="@+id/return_Page"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:text="return_page"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/return_Top"
        android:layout_toEndOf="@+id/return_Top"
        android:background="@drawable/purple"/>

    <Button
        android:id="@+id/Button_8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="8"
        android:layout_alignBaseline="@+id/Button_9"
        android:layout_alignBottom="@+id/Button_9"
        android:layout_toRightOf="@+id/Button_7"
        android:layout_toEndOf="@+id/Button_7"
        android:background="@drawable/water"/>

    <Button
        android:id="@+id/Button_7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="7"
        android:layout_alignBaseline="@+id/Button_8"
        android:layout_alignBottom="@+id/Button_8"
        android:layout_toLeftOf="@+id/Button_5"
        android:layout_toStartOf="@+id/Button_5"
        android:background="@drawable/water"/>

    <Button
        android:id="@+id/Button_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_toEndOf="@+id/return_Top"
        android:layout_toRightOf="@+id/return_Top"
        android:background="@drawable/water"
        android:text="1" />

    <Button
        android:id="@+id/Button_4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="4"
        android:layout_below="@+id/Button_7"
        android:layout_alignLeft="@+id/Button_1"
        android:layout_alignStart="@+id/Button_1"
        android:background="@drawable/water"/>

    <EditText
        android:id="@+id/setting_life"
        android:lines="1"
        android:maxLength="4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@+id/Button_7"
        android:layout_toRightOf="@+id/Button_7"
        android:layout_toEndOf="@+id/Button_7" />


</RelativeLayout>