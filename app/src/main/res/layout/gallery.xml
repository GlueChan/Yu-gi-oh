<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gallery">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>-->
        <Button
            android:id="@+id/return_Top"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Topに戻る"
            android:background="@drawable/purple"/>


        <Button
            android:id="@+id/return_Page"
            android:text="前の画面に戻る"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="18dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/return_Top"
            android:layout_toEndOf="@+id/return_Top"
            android:layout_marginStart="18dp"
            android:background="@drawable/purple" />


        <TextView
            android:id="@+id/text_view"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/change_player1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Player1の\n画像を変更"
            android:layout_below="@+id/return_Top"
            android:layout_toLeftOf="@+id/return_Page"
            android:layout_toStartOf="@+id/return_Page"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/lightblue"/>

        <Button
            android:id="@+id/change_player2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Player2の\n画像を変更"
            android:layout_alignBaseline="@+id/change_player1"
            android:layout_alignBottom="@+id/change_player1"
            android:layout_alignLeft="@+id/return_Page"
            android:layout_alignStart="@+id/return_Page"
            android:background="@drawable/lightblue"/>

        <Button
            android:id="@+id/set_image"
            android:text="Playeer2の画像を\nデフォルトに戻す"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_player2"
            android:layout_alignLeft="@+id/change_player2"
            android:layout_alignStart="@+id/change_player2"
            android:background="@drawable/green"/>

        <ImageView
            android:id="@+id/image_view"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/get_image"
            android:text="Player1の画像を\nデフォルトに戻す"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gallery_get"
            android:layout_below="@+id/change_player1"
            android:layout_alignLeft="@+id/change_player1"
            android:layout_alignStart="@+id/change_player1"
            android:background="@drawable/green"/>

        <!--<Button-->
            <!--android:id="@+id/change_player2"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:text="Player2の\n画像を変更"-->
            <!--android:layout_above="@+id/get_image"-->
            <!--android:layout_toRightOf="@+id/change_player1"-->
            <!--android:layout_toEndOf="@+id/change_player1"-->
            <!--android:layout_marginLeft="25dp"-->
            <!--android:layout_marginStart="25dp" />-->

    </RelativeLayout>
</ScrollView>