<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/return_Top"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Topに戻る"/>

    <Button
        android:id="@+id/coin_menu"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="コインメニュー"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/return_Top"
        android:layout_alignEnd="@+id/return_Top" />

    <ImageView
        android:id="@+id/coin1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_toLeftOf="@+id/coin2"
        android:layout_toStartOf="@+id/coin2"
        android:scaleType="fitCenter"
        android:src="@drawable/gold" />

    <ImageView
        android:id="@+id/coin2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/coin1"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="コイントス スタート!" />

</RelativeLayout>
