<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/return_Top"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Topに戻る"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00000000"
        android:layout_alignTop="@+id/coin"
        android:layout_alignLeft="@id/coin"
        android:layout_alignStart="@id/coin"/>

    <Button
        android:id="@+id/coin_menu"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="コインメニュー"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/return_Top"
        android:layout_alignEnd="@+id/return_Top"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/coin"
        android:src="@drawable/gold"
        android:scaleType="fitCenter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
