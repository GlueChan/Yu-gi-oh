<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/return_Top"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="トップに戻る" />

        <View
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/Player_cal1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:maxLength="5"
            android:lines="1">
        </EditText>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/damageBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="onClick">
        </LinearLayout>
    </HorizontalScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Button_0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="0"
            android:layout_above="@+id/Button_00"
            android:layout_toRightOf="@+id/Button_6"
            android:layout_toEndOf="@+id/Button_6" />

        <Button
            android:id="@+id/Button_00"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="00"
            android:layout_alignBaseline="@+id/Button_Add"
            android:layout_alignBottom="@+id/Button_Add"
            android:layout_toRightOf="@+id/Button_6"
            android:layout_toEndOf="@+id/Button_6" />

        <Button
            android:id="@+id/Button_1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="1"
            android:layout_alignTop="@+id/Button_Dvision"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Button_2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="2"
            android:layout_alignBaseline="@+id/Button_1"
            android:layout_alignBottom="@+id/Button_1"
            android:layout_toRightOf="@+id/Button_4"
            android:layout_toEndOf="@+id/Button_4" />

        <Button
            android:id="@+id/Button_3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="3"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/Button_2"
            android:layout_toEndOf="@+id/Button_2" />

        <Button
            android:id="@+id/Button_4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="4"
            android:layout_above="@+id/Button_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Button_5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="5"
            android:layout_alignBaseline="@+id/Button_4"
            android:layout_alignBottom="@+id/Button_4"
            android:layout_toRightOf="@+id/Button_4"
            android:layout_toEndOf="@+id/Button_4" />

        <Button
            android:id="@+id/Button_6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="6"
            android:layout_alignBaseline="@+id/Button_5"
            android:layout_alignBottom="@+id/Button_5"
            android:layout_toRightOf="@+id/Button_5"
            android:layout_toEndOf="@+id/Button_5" />

        <Button
            android:id="@+id/Button_7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="7"
            android:layout_alignBaseline="@+id/Button_9"
            android:layout_alignBottom="@+id/Button_9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/Button_8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="8"
            android:layout_alignBaseline="@+id/Button_7"
            android:layout_alignBottom="@+id/Button_7"
            android:layout_toRightOf="@+id/Button_4"
            android:layout_toEndOf="@+id/Button_4" />

        <Button
            android:id="@+id/Button_9"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="9"
            android:layout_alignBaseline="@+id/Button_0"
            android:layout_alignBottom="@+id/Button_0"
            android:layout_toRightOf="@+id/Button_5"
            android:layout_toEndOf="@+id/Button_5" />


        <Button
            android:id="@+id/Button_Add"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="+"
            android:layout_alignBaseline="@+id/Button_6"
            android:layout_alignBottom="@+id/Button_6"
            android:layout_alignRight="@+id/Button_000"
            android:layout_alignEnd="@+id/Button_000"
            android:layout_alignLeft="@+id/Button_000"
            android:layout_alignStart="@+id/Button_000" />

        <Button
            android:id="@+id/Button_Dvision"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:text="-"
            android:layout_alignBaseline="@+id/Button_3"
            android:layout_alignBottom="@+id/Button_3"
            android:layout_toRightOf="@+id/Button_3"
            android:layout_toLeftOf="@+id/Button_Add"
            android:layout_toStartOf="@+id/Button_Add" />

        <Button
            android:id="@+id/Button_subtraction"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="/"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/Button_Dvision"
            android:layout_toEndOf="@+id/Button_Dvision" />

        <Button
            android:id="@+id/Button_Equal"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="="
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/Button_subtraction"
            android:layout_toEndOf="@+id/Button_subtraction"
            android:layout_alignTop="@+id/Button_000" />

        <Button
            android:id="@+id/Button_000"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="000"
            android:layout_alignBaseline="@+id/Button_7"
            android:layout_alignBottom="@+id/Button_7"
            android:layout_toRightOf="@+id/Button_0"
            android:layout_toEndOf="@+id/Button_0" />
    </RelativeLayout>
</LinearLayout>
