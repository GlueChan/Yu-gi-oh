<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/Button_return_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topに戻る"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/purple"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/Button_Change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="画像の追加＆変更"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/red"/>
    </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="10dp">

       <Button
           android:id="@+id/Button_damage"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="ダメージ量設定"
           android:layout_weight="1"
           android:textSize="20dp"
           android:background="@drawable/lightblue"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/setting_life"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ライフの初期設定"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/green"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tutorial"
            android:background="@color/colorWhite"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="チュートリアル"/>

    </LinearLayout>

</LinearLayout>
