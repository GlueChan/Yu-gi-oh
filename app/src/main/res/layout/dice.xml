<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/return_Top"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Topに戻る"
        android:background="@drawable/purple"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00000000"
        android:layout_alignTop="@+id/dice"
        android:layout_alignLeft="@+id/dice"
        android:layout_alignStart="@+id/dice" />

    <ImageView
        android:id="@+id/dice"
        android:src="@drawable/dice"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/return_Top"
        android:layout_toRightOf="@+id/return_Top"
        android:layout_toEndOf="@+id/return_Top" />
</RelativeLayout>
